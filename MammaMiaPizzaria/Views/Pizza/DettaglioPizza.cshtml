@model Pizza

<div class="container">
	<div class ="row">
		<div class="col-12">
			<div class="d-flex align-items-center">
				<h1 class="mt-3 mb-3">Dettagli Pizza</h1>
			</div>
			<div class="position-static-single-image-container">
				<img src="@Model.immagine"
			</div>
			<p>
				<strong>Nome Pizza:</strong>
				@Model.Nome
			</p>
			<p>
				<strong>Ingredienti:</strong>
				@Model.Ingredienti
			</p>
		</div>
	</div>
</div>
